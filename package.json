{
  "name": "@nekkus/ui-kit",
  "version": "0.1.0",
  "description": "Shared React UI components for Nekkus ecosystem",
  "type": "module",
  "main": "./dist/nekkus-ui-kit.umd.cjs",
  "module": "./dist/nekkus-ui-kit.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/nekkus-ui-kit.js",
      "require": "./dist/nekkus-ui-kit.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0"
  }
}
